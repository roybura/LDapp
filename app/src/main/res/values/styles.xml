<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="btn" parent="@android:style/Widget.Button">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/shape_but</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:textSize">40dp</item>
    </style>
    <style name="box" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:layout_width">532dp</item>
        <item name="android:layout_height">226dp</item>
        <item name="android:background">@color/colorbg4</item>
        <item name="android:layout_marginRight">212dp</item>
        <item name="android:layout_marginLeft">212dp</item>
        <item name="android:layout_marginBottom">40dp</item>

    </style>

    <style name="text" parent="@style/Theme.AppCompat">
        <item name="android:layout_width">142dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">58dp</item>
        <item name="android:layout_marginBottom">-38dp</item>
        <item name="android:textSize">25dp</item>


    </style>

</resources>
